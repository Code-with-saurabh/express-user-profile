<!DOCTYPE html>
<html lang="en">
<head>
    <title>All Users</title>
    <meta charset="UTF-8">
    <meta name="description" content="Display all users">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white font-sans">
  <!-- Back Button -->
  <button 
    class="absolute top-5 left-5 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none" 
    onclick="window.location.href='/'">
    Back to Form
  </button>

  <div class="flex justify-center items-center min-h-screen p-6">
    <div class="w-full max-w-4xl bg-zinc-800 p-8 rounded-lg shadow-lg space-y-6">
        <h2 class="text-2xl font-bold mb-6 text-center">All Users</h2>
        
        <!-- Loop through users dynamically -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% users.forEach(function(user) { %>
                <!-- User Card -->
                <div class="bg-red-600 rounded-lg p-4 flex flex-col items-center">
                    <img src="<%= user.imgurl %>" alt="User Image" class="w-24 h-24 rounded-full object-cover mb-4">
                    <p class="text-lg font-semibold mb-4"><%= user.name %></p>
                    <p class="text-sm mb-4"><%= user.email %></p>
                    <!-- Edit and Delete Links -->
                    <div class="mt-4">
                        <a href="/edit/<%= user._id%>" class="text-white text-sm hover:underline mr-4">Edit User</a>
                        <a href="deleteUser/<%= user._id%>" class="text-red-500 text-sm hover:underline">Delete User</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
  </div>
</body>
</html>
